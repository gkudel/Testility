@model Testility.WebUI.Areas.Setup.Model.SolutionViewModel
@using Testility.WebUI.Extensions;

@{
    ViewBag.Title = "Solution Explorer";
}

@using (Html.BeginForm("Edit", "Solution", FormMethod.Post, new { enctype = "multipart/form-data", id = "Solution", role = "form"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

   
    <div class="panel panel-default" ng-controller="SolutionController">

        <div class="panel-heading">
            <div><h2><strong><span class="glyphicon glyphicon-edit"></span> Solution Explorer</strong></h2></div>
        </div>
        <div class="panel-body">            
            <div class="padding-bottom-10">
                <div class="col-md-9">
                    <div class="form-inline">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @ng_model = "Name" } })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Language, htmlAttributes: new { @class = "control-label" })
                            @Html.EnumDropDownListFor(model => model.Language, htmlAttributes: new { @class = "form-control", @ng_model = "Language" })
                        </div>
                    </div>
                </div>
                <div class="text-right col-md-3">
                    <div class="btn-group" ng-controller="BrowserController">
                        <a id="References" ng-click="open('lg')" data-toggle="modal" data-target="#myModal" href="" class="btn btn-default btn-md"><span class="glyphicon glyphicon-plus"></span> References</a>
                        @{ Html.RenderPartial("_Browser"); }
                    </div>
                </div>
            </div>
            <div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="table">
                <div class="td-left">
                    <a href="@Url.Action("List")">
                        <span class="glyphicon glyphicon-step-backward"></span> Back to Projects Explorer
                    </a>
                </div>
                <div class="td-right">
                    <button type="submit" value="Save" class="btn btn-primary btn-lg" form="Solution">
                        <span class="glyphicon glyphicon-floppy-disk"></span> Save
                    </button>
                </div>
            </div>
        </div>
    </div>
 }

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/angular-ui")
	@Scripts.Render("~/bundles/solution")
}
@section css{
	@Styles.Render("~/Content/ide")
}
