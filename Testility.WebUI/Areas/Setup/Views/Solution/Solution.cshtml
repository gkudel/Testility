@model Testility.WebUI.Areas.Setup.Model.SolutionViewModel
@using Testility.WebUI.Extensions;

@{
    ViewBag.Title = "Solution Explorer";
}

@using (Html.BeginForm("Edit", "Solution", FormMethod.Post, new { enctype = "multipart/form-data", id = "Solution", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <input ng-repeat="r in Solution.References " type="hidden" name="References"  id="References[{{$index}}]" ng-model="r" />

    <div class="panel panel-default" ng-controller="SolutionController">
        <div class="panel-heading">
            <div><h2><strong><span class="glyphicon glyphicon-edit"></span> Solution Explorer</strong></h2></div>
        </div>
        <div class="panel-body">
            <div class="text-right col-md-4 col-md-offset-8">
                <div class="btn-group btn-group-justified">
                    <a href="" ng-click="addTab()" class="btn btn-default btn-md"><span class="glyphicon glyphicon-plus"></span> Item </a>
                    <a ui-browser config="References" items-selected="References(items)" model-size="ReferencesModelSize" class="btn btn-default btn-md"><span class="glyphicon glyphicon-plus"></span> References</a>
            </div>
            </div>
            <div>
                <div class="form-inline padding-bottom-10 container">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @ng_model = "Solution.Name" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Language, htmlAttributes: new { @class = "control-label" })
                        @Html.EnumDropDownListFor(model => model.Language, htmlAttributes: new { @class = "form-control", @ng_model = "Solution.Language", @convert_number="" })
                    </div>
                </div>
            </div>
            <div>
                <tabset>
                    <tab ng-repeat="item in Solution.Items" heading="{{item.Name}}" active="item.active" disable="item.disabled">
                        <div class="panel panel-default">
                            <input type="hidden" name="Items[{{$index}}].Id" id= "Items[{{$index}}].Id" ng-model = "item.Id" />
                            <input type="hidden" name="Items[{{$index}}].SolutionId" id="Items[{{$index}}].SolutionId" ng-model="item.SolutionId" />

                            <div class="form-horizontal  padding-top-10">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Items, i => i.Name, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBox("Items[{{$index}}].Name", "", new { @class = "form-control", @id = "Items[{{$index}}].Name", @ng_model = "item.Name" })
                                    </div>
                                </div>
                                <div class="padding-non" ng-controller="CodeController">
                                    <textarea  ui-codemirror ng-model="code"></textarea>
                                </div>
                            </div>
                        </div>
                    </tab>
                </tabset>
            </div>
        </div>
        <div class="panel-footer">
            <div class="table">
                <div class="td-left">
                    <a href="@Url.Action("List")">
                        <span class="glyphicon glyphicon-step-backward"></span> Back to Projects Explorer
                    </a>
                </div>
                <div class="td-right">
                    <button type="submit" value="Save" class="btn btn-primary btn-lg" form="Solution">
                        <span class="glyphicon glyphicon-floppy-disk"></span> Save
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/solution")
}
@section css{
	@Styles.Render("~/Content/ide")
}
