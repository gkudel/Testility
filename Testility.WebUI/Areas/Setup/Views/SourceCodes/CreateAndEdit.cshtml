@model Testility.WebUI.Areas.Setup.Models.EditViewModel
@using Testility.WebUI.Extensions;

@{
    ViewBag.Title = "Edit";
}

@Html.SourceCodesCreateAndEditHeaderHelper()
@using (Html.BeginForm("Edit", "SourceCodes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SourceCode</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SourceCode.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.SourceCode.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SourceCode.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SourceCode.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SourceCode.Language, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.SourceCode.Language, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SourceCode.Language, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SourceCode.ReferencedAssemblies, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.SourceCode.ReferencedAssemblies, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.SourceCode.ReferencedAssemblies, "", new {@class = "text-danger"})
            </div>
        </div>


        <div class="form-group">
            <label class ="control-label col-md-2">File</label>
            <div class="col-md-10">
                <input type="file" name="uploadedFile" id="file" class="file"/>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
