@using Testility.Domain.Entities
@model IEnumerable<Testility.Domain.Entities.TestedClass>


<table class="table table-hover .info pull-left">
    <h3>Tested Classes:</h3>
    <tr>
        <th class="col-lg-1">
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th class="col-lg-1">
            @Html.DisplayNameFor(model => model.Description)
        </th>

        <th class="col-lg-1">
            Options
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="col-lg-1">
                @Html.DisplayFor(modelItem => item.Name)
            </td>


            <td class="col-lg-1">
                Account class
            </td>

            <td class="col-lg-1">
                @Html.ActionLink("Edit", "Edit", new { controller = "TestedClasses", id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { controller = "TestedClasses", id = item.Id }, new { @class = "btn btn-primary" })
                <input type="button" value="Show Methods" class="btn btn-default" />
            </td>
       
            @{Html.RenderPartial("_TestedMethodsPartialView", item.Methods);}
        </tr>

    }
</table>
